{
  "name": "my-study-planner",
  "version": "0.1.3",
  "private": true,
  "scripts": {
    "postinstall": "run-p install:*",
    "install:api": "cd api && npm install",
    "install:web": "cd web && yarn",
    "start": "run-s start:*",
    "start:api": "cd api && npm run start:docker",
    "start:web": "cd web && serve --no-clipboard --single --listen 3000 build",
    "dev": "npm-run-all dev:*",
    "dev:api": "cd api && npm run start:docker",
    "dev:web": "npm run start --prefix web",
    "setup": "cd api && npm run build:docker",
    "build": "run-p build:*",
    "build:api": "cd api && npm run build && cd ..",
    "build:web": "cd web && cross-env CI=false REACT_APP_DOMAIN=localhost REACT_APP_API_URL=http://localhost:3001/api npm run build && cd ..",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "cd web && npm run test",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "test:e2e:run": "start-server-and-test start http://localhost:3000 cy:run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 cy:open",
    "precommit": "run-s precommit:*",
    "precommit:api": "cd api && npm run precommit",
    "precommit:web": "cd web && npm run precommit"
  },
  "devDependencies": {
    "@jackfranklin/test-data-bot": "^1.3.0",
    "@testing-library/cypress": "^6.0.0",
    "cross-env": "^7.0.2",
    "cypress": "^4.6.0",
    "eslint": "6.x",
    "husky": "^4.2.5",
    "is-ci-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "serve": "^11.3.1",
    "start-server-and-test": "^1.11.0"
  }
}
